pipeline {
    agent any

    stages {
        stage('1st Stage') {
            steps {
                echo 'Hello World! Welcome to the 1st stage'
            }
        }
   
        stage('2nd stage') {
            steps {
                echo 'Welcome to the 2nd stage'
            }
        }
    
        stage('3rd stage') {
            steps {
                echo 'You have now reached the 3rd stage'
            }
        }
  
        stage('4th stage') {
            steps {
                echo 'This is the 4th and last stage'
            }
        }
    
    }
}
